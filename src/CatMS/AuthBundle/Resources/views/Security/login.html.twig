{% extends 'CatMSAdminBundle::cutBase.html.twig' %}

{% block content %}
<form class="form-horizontal" action="{{ path('login_check') }}" method="post" style="width: 248px; margin: 20px auto">
    <div class="control-group">
        <div class="input-prepend">
            <span class="add-on"><i class="icon-user"></i></span>
            <input style="width: 206px;" class="span2" id="prependedInput" type="text" placeholder="Username" name="_username">
        </div>
    </div>
    <div class="control-group">
        <div class="input-prepend">
            <span class="add-on"><i class="icon-asterisk"></i></span>
            <input type="password" id="password" placeholder="Password" name="_password">
        </div>
    </div>

    <div class="control-group">
        
        <div class="controls" style="margin: 0">
            
            <label class="checkbox" style="display: inline-block; margin-right: 9px;"><input type="checkbox" id="remember_me" name="_remember_me" checked>Keep me logged in
            </label>
            <button style="float: right" type="submit" class="btn btn-primary">Sign in</button><br/>

            <a href="#forgetPw" data-toggle="modal" data-target="#forgetPw">Forget password?</a>
            {% include 'CatMSAdminBundle:Helpers:modal.html.twig' with {'id': 'forgetPw', 'msg': 'Generate new password', 'btnTxt': 'Generate', 'href': 'generate-new-password'} %}
        </div>    
        
    </div>
</form>
{% endblock %}