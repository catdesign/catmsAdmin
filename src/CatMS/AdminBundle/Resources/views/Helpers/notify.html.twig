{% for flashMessage in app.session.flashbag.get('noticeSuccess') %}
    <script>
        $(function() {
            $.pnotify({
                title: '{{ 'global.success' | trans }}',
                text: '{{ flashMessage | trans }}',
                type: 'success'
            });              
        });
    </script>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('noticeFailure') %}
    <script>
        $(function() {
            $.pnotify({
                title: {{ 'global.errorOccured' | trans }},
                text: '{{ flashMessage | trans }}',
                type: 'error'
            });
        });
    </script>
{% endfor %}