                <li class="ajax-content-groups-preloder"><a class="tmp-content-group-url" href="{{ path('content-manager-pure-url') }}"><img src="{{ asset('img/loader.gif') }}" alt="Loading..." /></a></li>
            </ul>
        </li>
        
        <li class="divider"></li>
        
        <li class="nav-header">{{ 'nav.contentManager.dropdownHeaders.textContent' | trans }}</li>
        <li {% if is_active_nav_button('contentgroup', 'index') %}class="active"{% endif %}><a href="{{ path('content-group') }}"><i class="icon-tags"></i> {{ 'nav.contentManager.list.groups' | trans }}</a></li>
        {% if is_granted('ROLE_DEVELOPER') %}
        <li {% if is_active_nav_button('contentgroup', 'new') %}class="active"{% endif %}><a href="{{ path('content-group-new') }}"><i class="icon-pencil"></i> {{ 'nav.contentManager.list.createGroup' | trans }}</a></li>
        {% endif %}
        
        <li class="divider"></li>
        <li class="nav-header">{{ 'nav.contentManager.dropdownHeaders.mediaLibrary' | trans }}</li>
        <li {% if is_active_nav_button('medialibrary', 'list') %}class="active"{% endif %}><a href="{{ path('media-library-grid-list') }}"><i class="icon-picture"></i> {{ 'nav.contentManager.list.allImagesAndAssets' | trans }}</a></li>
        <li {% if is_active_nav_button('mediaibrary', 'upload') %}class="active"{% endif %}><a href="{{ path('media-library-upload') }}"><i class="icon-upload"></i> {{ 'nav.contentManager.list.uploadFile' | trans }}</a></li>
        <li {% if is_active_nav_button('imagegroup', 'index') %}class="active"{% endif %}><a href="{{ path('image-group') }}"><i class="icon-folder-open"></i> {{ 'nav.contentManager.list.groups' | trans }}</a></li>
        {% if is_granted('ROLE_DEVELOPER') %}
        <li {% if is_active_nav_button('imagegroup', 'new') %}class="active"{% endif %}><a href="{{ path('image-group-new') }}"><i class="icon-pencil"></i> {{ 'nav.contentManager.list.createGroup' | trans }}</a></li>
        {% endif %}
    </ul>
</li>

