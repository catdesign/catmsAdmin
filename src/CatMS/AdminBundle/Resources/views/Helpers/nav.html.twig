<li class="divider-vertical"></li>

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        {{ 'nav.contentManager.tabTitle' | trans }}
    <b class="caret"></b>
    </a>

    <ul class="dropdown-menu">
        <li class="nav-header">{{ 'nav.contentManager.dropdownHeaders.directAccessEdit' | trans }}</li>
        <li class="dropdown-submenu">
            <a class="ajax-get-groups" tabindex="-1" href="{{ path('ajax-get-groups') }}"><i class="icon-folder-open"></i> {{ 'nav.contentManager.list.imageAssetGroups' | trans }}</a>
