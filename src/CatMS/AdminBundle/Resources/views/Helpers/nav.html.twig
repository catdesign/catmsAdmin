                <li class="ajax-image-groups-preloder"><a class="tmp-image-group-url" href="{{ path('media-library-group-grid-list-pure') }}"><img src="{{ asset('img/loader.gif') }}" alt="Loading..." /></a></li>
            </ul>
        </li>
        
        <li class="dropdown-submenu">
            <a class="ajax-get-content-groups" tabindex="-1" href="{{ path('ajax-get-content-groups') }}"><i class="icon-tags"></i> {{ 'nav.contentManager.list.contentGroups' | trans }}</a>
