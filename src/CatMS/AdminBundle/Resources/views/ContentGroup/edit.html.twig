{% extends 'CatMSAdminBundle::base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('content-group') }}">Content Groups</a></li> <span class="divider">/</span>
    <li class="active">Edit group {{ truncate(entity.description | striptags | raw, 40) }}</a>
{% endblock %}

{% block javascripts_bottom %}
    <script>
        $(function(){
            $('#catms_adminbundle_contentgrouptype').css('margin-bottom', '30px');
            var relImgContainer = $('#catms_adminbundle_contentgrouptype_relatedImages').parent('div');
            relImgContainer.css({
                'float': 'right',
                'position': 'relative',
                'top': '-165px',
                'right': '0px',
                'height': '155px',
                'width': '250px'
            });
            relImgContainer.children('select').css({
           'width': '250px',
           'height': '130px'
        });
    });
    </script>
    <script type="text/javascript" src="{{ asset('js/tinymce/tinymce.min.js')}}"></script>
    <script>
    tinymce.init({
        selector: "textarea#catms_adminbundle_contentgrouptype_manual",
        width : 940,
        height: 220,
        plugins: "code, textcolor",
        toolbar: "undo redo | styleselect | bold italic underline strikethrough | lignleft aligncenter alignright alignjustify | numlist bullist outdent indent | code | forecolor"
    });
    </script>
{% endblock %}        
        
{% block content -%}

    <legend>Content group <i>{{ entity.description | striptags | raw }}</i> edit</legend>

    <form novalidate action="{{ path('content-group-update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-float">
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="btn-group">
            <a href="{{ path('content-group') }}" class="btn"><i class="icon-list"></i> Back to the list</a>
            <button type="submit" class="btn btn-primary show-loader" data-loading-text="Saving..."><i class="icon-hdd"></i> Save</button>
        </div>

    </form>

    <form action="{{ path('content-group-delete', { 'id': entity.id }) }}" method="post" style="clear: both">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn" data-toggle="modal" data-target="#delete"><i class="icon-trash"></i> Delete</button>
        {% include 'CatMSAdminBundle:Helpers:modal.html.twig' with {'id': 'delete', 'msg': 'Delete content group', 'btnTxt': 'Delete'} %}
    </form>
{% endblock %}
