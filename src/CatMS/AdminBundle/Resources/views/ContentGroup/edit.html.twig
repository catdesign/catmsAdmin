{% extends 'CatMSAdminBundle::base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('content-group') }}">Content Groups</a></li> <span class="divider">/</span>
    <li class="active">Edit group {{ truncate(entity.description | striptags | raw, 40) }}</a>
{% endblock %}

{% block javascripts_bottom %}
    <script type="text/javascript" src="{{ asset('js/tinymce/tinymce.min.js')}}"></script>
    <script type="text/javascript" src="{{ asset('js/catms.text-editor.js')}}"></script>
    <script src="{{ asset('js/catms.popover.js') }}"></script>
    <script src="{{ asset('js/catms.fields-labels.js') }}"></script>
{% endblock %}        
        
{% block content -%}
    {% include 'CatMSAdminBundle:Helpers:form-errors-div.html.twig' with {'form': edit_form, 'errors': errors | default() } %}
    
    <legend><i class="icon-large icon-edit"></i> Content group <i>{{ entity.description | striptags | raw }}</i> edit</legend>

    <form novalidate action="{{ path('content-group-update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-float">
        <div class="btn-group" style="margin-bottom: 20px;">
            <a href="{{ path('content-group') }}" class="btn btn-small"><i class="icon-tags"></i> Back to the list</a>
            <button type="submit" class="btn btn-primary show-loader btn-small" data-loading-text="Saving..."><i class="icon-hdd icon-small"></i> Save</button>
        </div> 
        

        <div class="row-fluid">
            <div class="span5 input-wrapper">
                {{ form_row(edit_form.slug, {'attr': {'class': 'span12'}}) }}
                {{ form_row(edit_form.description, {'attr': {'class': 'span12'}})}}
                {{ form_row(edit_form.isRemovable, {'attr': {'class': 'span12 select-icons'}})}}
            </div>
            <div class="span4 related-image-select pull-right offset3 input-wrapper">
                {{ form_row(edit_form.relatedImages) }}
            </div>                    
        </div>

        <legend class="legend-inside"><i class="icon-large icon-tags"></i> Content group fields and labels</legend>
        <div class="content-group-fields">         
            <div class="row-fluid">  
                <div class="span3 chevronized">
                    {{ form_row(edit_form.contentFields.hasDescription) }}
                </div>
                <div class="span6 field-label">
                    {{ form_row(edit_form.contentFields.fieldDescriptionLabel) }}
                </div>
            </div>
            <div class="row-fluid">  
                <div class="span3 chevronized">
                    {{ form_row(edit_form.contentFields.hasTitle) }}
                </div>
                <div class="span6 field-label">
                    {{ form_row(edit_form.contentFields.fieldTitleLabel) }}
                </div>
            </div>
            <div class="row-fluid">  
                <div class="span3 chevronized">
                    {{ form_row(edit_form.contentFields.hasFullText) }}
                </div>
                <div class="span6 field-label">
                    {{ form_row(edit_form.contentFields.fieldFullTextLabel) }}
                </div>
            </div>                   
            <div class="row-fluid">  
                <div class="span3 chevronized">
                    {{ form_row(edit_form.contentFields.hasShortText) }}
                </div>
                <div class="span6 field-label">
                    {{ form_row(edit_form.contentFields.fieldShortTextLabel) }}
                </div>
            </div>        
        </div>
        
        <legend class="legend-inside"><i class="icon-large icon-comment"></i> Manual</legend>
        <div class="row-fluid">
            <div class="span12 input-wrapper">
                {{ form_widget(edit_form.manual, {'attr': {'class': 'tiny_full'}}) }}
            </div>
        </div>
        
        {{ form_rest(edit_form) }}
        
        <input type="hidden" name="_method" value="PUT" />
        
        <div class="btn-group">
            <a href="{{ path('content-group') }}" class="btn btn-small"><i class="icon-tags"></i> Back to the list</a>
            <button type="submit" class="btn btn-primary show-loader btn-small" data-loading-text="Saving..."><i class="icon-hdd icon-small"></i> Save</button>
        </div> 

    </form>
    
    <form action="{{ path('content-group-delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn btn-small remove-this"><i class="icon-trash"></i> Delete</button>
    </form>

    </script>
{% endblock %}
