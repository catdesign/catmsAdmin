{% extends 'CatMSAdminBundle::base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('image-group') }}">Image Groups</a></li> <span class="divider">/</span>
    <li class="active">Edit group {{ truncate(entity.description | striptags | raw, 40) }}</a>
{% endblock %}

{% block content -%}
    <legend>Editing image group <i>{{entity.description | striptags | raw }}</i></legend>

    <form novalidate action="{{ path('image-group-update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="btn-group">
            <a href="{{ path('image-group') }}" class="btn"><i class="icon-list"></i> Back to the list</a>
            <button type="submit" class="btn btn-primary show-loader" data-loading-text="Saving..."><i class="icon-hdd"></i> Save</button>
        </div>
    </form>
    
    <form action="{{ path('image-group-delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn" data-toggle="modal" data-target="#delete"><i class="icon-trash"></i> Delete</button>
        {% include 'CatMSAdminBundle:Helpers:modal.html.twig' with {'id': 'delete', 'msg': 'Delete image group', 'btnTxt': 'Delete'} %}
    </form>
    
{% endblock %}
