{% extends 'CatMSAdminBundle::base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('image-group') }}">Asset Groups</a></li> <span class="divider">/</span>
    <li class="active">Edit group {{ truncate(entity.description | striptags | raw, 40) }}</a>
{% endblock %}

{% block content -%}
    <legend><i class="icon-large icon-edit"></i> Editing asset group <i>{{entity.description | striptags | raw }}</i></legend>

    <form novalidate action="{{ path('image-group-update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <div class="row-fluid">
            <div class="span6">
                {{ form_row(edit_form.slug) }}
                {{ form_row(edit_form.description) }}
                {{ form_row(edit_form.imageWidth) }}
                {{ form_row(edit_form.imageHeight) }}
            </div>
            <div class="span6">
                <label for="catms_adminbundle_imagegrouptype_hasThumbnails">Has thumbnails? {{ form_widget(edit_form.hasThumbnails)}}</label><br />
                {{ form_row(edit_form.thumbnailWidth) }}
                {{ form_row(edit_form.thumbnailHeight) }}
            </div>
        </div>
        {{ form_rest(edit_form) }}

        <input type="hidden" name="_method" value="PUT" />
        
        <br />
        <div style="float: left;">
            <a href="{{ path('image-group') }}" class="btn btn-small"><i class="icon-list"></i> Back to the list</a>
            <button type="submit" class="btn btn-primary btn-small show-loader" data-loading-text="Saving..."><i class="icon-hdd"></i> Save</button>
        </div>
    </form>
    
    <form action="{{ path('image-group-delete', { 'id': entity.id }) }}" method="post" style="float: right;">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" data-view="left" class="btn btn-small btn-warning remove-this"><i class="icon-trash"></i> Delete</button>
    </form>
    
{% endblock %}
