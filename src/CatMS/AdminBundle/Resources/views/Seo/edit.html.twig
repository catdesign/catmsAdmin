{% extends 'CatMSAdminBundle::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    textarea { width: 500px }
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('seo') }}">SEO manager</a></li> <span class="divider">/</span>
    <li class="active">Edit page {{ entity.slug }} SEO</li>
{% endblock %}
    
{% block content -%}
    <legend>Edit page {{ entity.slug }} SEO</legend>

    <form action="{{ path('seo-update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} style="width: 225px">
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <div class="btn-group">
            <a href="{{ path('seo') }}" class="btn"><i class="icon-list"></i> Back to the list</a>
            <a href="{{ path('seo-show', { 'id': entity.id }) }}" class="btn"><i class="icon-fullscreen"></i> Show</a>
            <button type="submit" class="btn btn-primary show-loader" data-loading-text="Saving..."><i class="icon-hdd"></i> Save</button>
        </div>
    </form>

    <form action="{{ path('seo-delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn" data-toggle="modal" data-target="#delete"><i class="icon-trash"></i> Delete</button>
        {% include 'CatMSAdminBundle:Helpers:modal.html.twig' with {'id': 'delete', 'msg': 'Delete SEO page', 'btnTxt': 'Delete'} %}
    </form>    
    
{% endblock %}
