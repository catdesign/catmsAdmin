{% extends 'CatMSAdminBundle::base.html.twig' %}

{% if (module == 'Panel') %}
    {% set range = 'Panel' %}
    {% set pathname = 'panel-settings' %}
{% else %}
    {% set range = 'Frontend' %}
    {% set pathname = 'frontend-settings' %}
{% endif %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path(pathname) }}">{{ module }} settings</a></li> <span class="divider">/</span>
    <li  class="active">{{ entity.slug }} setting</li>
{% endblock %}
    
{% block content -%}
    <legend>{{ entity.slug | capitalize }} setting</legend>

    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ entity.value }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group" style="margin-bottom: 10px">
        <a href="{{ path(pathname) }}" class="btn"><i class="icon-list"></i> Back to the list</a>
        <a href="{{ path('settings-edit', { 'id': entity.id, 'range': range | lower }) }}" class="btn"><i class="icon-edit"></i> Edit</a>
    </div> 

    <form action="{{ path('settings-delete', { 'id': entity.id, 'range': range | lower }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit" class="btn" data-toggle="modal" data-target="#delete"><i class="icon-trash"></i> Delete</button>
        {% include 'CatMSAdminBundle:Helpers:modal.html.twig' with {'id': 'delete', 'msg': 'Delete setting', 'btnTxt': 'Delete'} %}
    </form>

{% endblock %}
