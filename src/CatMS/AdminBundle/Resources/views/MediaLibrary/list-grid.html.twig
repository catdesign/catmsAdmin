{% extends 'CatMSAdminBundle::base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">
        <em>Media library</em> 
        <a href="{{ path('media-library') }}">&nbsp;<i class="icon-list"></i> List</a>&nbsp;&nbsp; 
        <a href="{{ path('media-library-grid-list') }}"> <i class="icon-th"></i> Grid</a>
    </li>
{% endblock %}    
    
{% block content -%}
    <script src="{{ asset('js/catms-media-library-grid-view.js') }}"></script>
    
    <div class="notice-container"></div>
     
    <legend>
        <i class="icon-large icon-picture"></i> Media library assets
        <a href="{{ path('media-library', {'page': 1}) }}" data-toggle="tooltip" title="Details View" class="show-list-view" style="float: right;">
            <i class="icon-large icon-list"></i>
        </a>
    </legend>

    <a href="{{ path('media-library-upload') }}" class="btn btn-small btn-success"><i class="icon-upload"></i> 
