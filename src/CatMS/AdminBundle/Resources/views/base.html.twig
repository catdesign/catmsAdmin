<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block title %}CatMS Admin{% endblock %}</title>
    <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" media="screen" rel="stylesheet" type="text/css" />
    <link href="{{ asset('fancybox/jquery.fancybox-1.3.4.css') }}" media="screen" rel="stylesheet" type="text/css" />
    <link href="{{ asset('css/style.css') }}" media="screen" rel="stylesheet" type="text/css" />
    <style>
        {% block stylesheets %}{% endblock %}
    </style>
    <script src="{{ asset('js/jquery-1.7.2.min.js') }}"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{{ path('admin-home') }}">CatMS Admin</a>
                <div class="nav-collapse collapse">

                    <ul class="nav">
                        {{ include('CatMSAdminBundle:Helpers:nav.html.twig') }}
                    </ul>

                    <div class="btn-group  to-right">
                        {% if not app.user %}
                            <a href="{{ path('login') }}" class="btn btn-primary">Login</a>
                        {% else %}
                            <span class="btn"><i class="icon-user"></i> Hello {{ app.user.username }}!</span>
                            <a href="{{ path('logout') }}" class="btn btn-primary"><i class="icon-off"></i> Logout</a>
                        {% endif %}
                    </div>           
                </div>
            </div>
        </div>
    </div>   
        
    <div class="container">
        
        <div class="history-trigger-container">
            <a class="btn btn-info"><i class="icon-chevron-left"></i> History</a>
        </div>
        <div class="history-container">
            <a href="{{ path('ajax-get-history')}}" id="getHistoryUrl" style="display: none"></a>
            <div class="page-header no-margin">
                <h5>History <small>last 10 actions</small></h5>
            </div>
            <div class="loader-history-gif"></div>
            <div class="append-history-here"></div>
        </div>
        
        <ul class="breadcrumb">
            {% block breadcrumb %}
                <li><i class="icon-home" style="margin-top: 0px;"></i> <a href="{{ path('admin-home')}}">Home</a></li> <span class="divider">/</span>
            {% endblock %}
        </ul>

        {% for flashMessage in app.session.flashbag.get('noticeSuccess') %}
            <div class="alert alert-info">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage | trans }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('noticeFailure') %}
            <div class="alert alert-error">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage | trans }}
            </div>
        {% endfor %}
        
        {% block content %}
        {% endblock %}
    </div> <!-- /container -->
    
    <!-- Javascripts at the bottom of page - decrease site load time -->
    <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('fancybox/jquery.fancybox-1.3.4.pack.js') }}"></script>
    <script src="{{ asset('fancybox/jquery.easing-1.3.pack.js') }}"></script>
    <script src="{{ asset('js/catms.scripts.js') }}"></script>
    <script src="{{ asset('js/catms.ajax.js') }}"></script>
    {% block javascripts_bottom %}{% endblock %}
    <!-- End Javascripts Bottom -->
    
</body>
</html>
