<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block title %}CatMS Admin{% endblock %}</title>
    {% stylesheets 
        'bootstrap/css/bootstrap.min.css'
        'bootstrap/css/bootstrap.icon-large.min.css'
        'bootstrap/css/glyphicons.css'
        'fancybox/jquery.fancybox-1.3.4.css'
        'css/catms-style.css'
        filter='cssrewrite, yui_css' output="css/yui/cmp.css" %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" />
    {% endstylesheets %}
    
    {% javascripts
        'js/jquery-1.7.2.min.js'
        'js/catms-global.js' 
        'bootstrap/js/bootstrap.min.js'
        'fancybox/jquery.fancybox-1.3.4.pack.js'
        'fancybox/jquery.easing-1.3.pack.js'
        'js/catms.scripts.js'
        'js/catms.ajax.js'
        filter='yui_js' output="js/yui/cmp.js" %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
        
    {% block javascripts_bottom %}{% endblock %}
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{{ path('admin-home') }}">CatMS Admin</a>
                <div class="nav-collapse collapse">

                    <ul class="nav">
                        {{ include('CatMSAdminBundle:Helpers:nav.html.twig') }}
                    </ul>

                    <div class="btn-group to-right">
                        {% if not app.user %}
                            <a href="{{ path('login') }}" class="btn btn-primary">Login</a>
                        {% else %}
                            <span class="btn"><i class="icon-user"></i> Hello {{ app.user.username }}!</span>
                            <a href="{{ path('logout') }}" class="btn btn-primary"><i class="icon-off"></i> Logout</a>
                        {% endif %}
                    </div>           
                </div>
            </div>
        </div>
    </div>   
        
    <div class="container">
        
        <div class="history-trigger-container">
            <a class="btn btn-info"><i class="icon-chevron-left"></i> History</a>
        </div>
        <div class="history-container">
            <a href="{{ path('ajax-get-history')}}" id="getHistoryUrl" style="display: none"></a>
            <div class="page-header no-margin">
                <h5>History <small>last 10 actions</small></h5>
            </div>
            <div class="loader-history-gif"></div>
            <div class="append-history-here"></div>
        </div>
        
        <ul class="breadcrumb">
            {% block breadcrumb %}
                <li><i class="icon-home" style="margin-top: 0px;"></i> <a href="{{ path('admin-home')}}">Home</a></li> <span class="divider">/</span>
            {% endblock %}
        </ul>

        {% for flashMessage in app.session.flashbag.get('noticeSuccess') %}
            <div class="alert alert-info">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage | trans }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('noticeFailure') %}
            <div class="alert alert-error">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage | trans }}
            </div>
        {% endfor %}
        
        {% block content %}
        {% endblock %}
    </div> <!-- /container -->
    
    <footer class="footer-bottom"><small><a href="http://www.catdesign.pl">Catdesign</a> &copy; 2013 Author: Dawid Job <a href="mailto:d.job@catdesign.pl">d.job@catdesign.pl</a></small></footer>
    
</body>
</html>
